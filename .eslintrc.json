{
  "extends": "react-app",

  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "serviceworker": true
  },

  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },

  "plugins": ["prettier"],

  "rules": {
    "space-before-function-paren": ["error", "always"],
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "never",
        "exports": "never",
        "functions": "ignore"
      }
    ]
  }
}
